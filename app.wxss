.flex-grow{flex-grow:1;}

/* 底部 */
.position-bottom{
  width: 100%;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  z-index: 999;
}
/* 高斯模糊 */
.blur{
    width: 100%;
    height: 100%;
    position: absolute;
    filter: blur(20rpx);
    transform: scale(1.2);
}

.my-shadow{  
  box-shadow: 0rpx 10rpx 20rpx 4rpx rgba(0, 0, 0, 0.1);
}

.my-shadow-top{
  box-shadow:0rpx -6rpx 7rpx 0rpx rgba(0, 0, 0, 0.05);
}

.my-shadow2{
  border:1rpx solid rgba(245,245,245,1);
  box-shadow:0rpx 7rpx 2rpx 0rpx rgba(198,199,198,0.11);
}

.my-shadow3{
  box-shadow:0rpx 3rpx 6rpx 0rpx rgba(154,154,154,0.19);
}

.layout-col{
  display: flex;
  flex-direction: column;
}
.layout-row{
  display: flex;
  flex-direction: row;
}
.center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.rich image{
  max-width: 100%;
}

/* =================== 去除button圆角================= */
button::after {
    border-radius: 0;
}
button{
    border-radius: 0;
}
/* ================================================== */

.word-break{
  word-wrap: break-word;
  word-break: break-all;
}

.showone {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.showtwo {
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.padding-top-5{
  padding-top: 5rpx;
}

.padding-top-15{
  padding-top: 15rpx;
}

.padding-left-5{
  padding-left: 5rpx;
}

.fixed-bottom{
  position: fixed;
  bottom: 0;
}


 .nav-cur{
  font-size: 32rpx !important;
  position: relative;
}

.nav-cur::after{
  content: '';
  width: 70%;
  height: 8rpx;
  background: #68B581;
  border-radius: 3rpx;
  position: absolute;
  left: 15%;
  bottom: 8rpx;
}

.mask{
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 0);
  position: fixed;
  top: 0;
  left: 0;
}

