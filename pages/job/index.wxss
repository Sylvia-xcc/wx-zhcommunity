/* ===swiper============================= */

#swiper-tab {
  width: 100%;
  position: relative;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  background-color: white;
}

.swiper-tab-list {
  font-size: 22rpx;
  display: inline-block;
  /* width: 33.3%; */
  color: #666;
  border-bottom: 0rpx;
  position: relative;
  height: 80rpx;
}

.swiper-tab-list text {
  display: inline-block;
  width: 80rpx;
  /* background: red; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.width1 {
  width: 33.3%;
}

.width2 {
  width: 25%;
}

.swiper-tab-list i {
  position: absolute;
  bottom: 30%;
  right: 18%;
  width: 0px;
  height: 0px;
  border: 5px solid #4e4e4e;
  border-top-color: #4e4e4e;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
}

.on {
  color: #68b581;
  /* border-bottom: 2rpx solid #f63; */
}

.on i {
  bottom: 42%;
  border: 5px solid #68b581;
  border-bottom-color: #68b581;
  border-top-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
}

.swiper-con {
  width: 100%;
  height: 100%;
  overflow: hidden;
  /* max-height: calc(100%-400rpx); */
  overflow-y: auto;
  overflow-x: hidden;
  background: #fff;
  border-top: 1rpx solid #eee;
  /* border-bottom: 2rpx solid red; */
  padding-bottom: 30rpx;
}

.swiper-con .item {
  padding: 30rpx 60rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.swiper-con .item-shaixuan {
  width: 30%;
  height: 75rpx;
  background: #f8f8f8;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 75rpx;
  vertical-align: middle;
  color: #000;
  font-size: 24rpx;
  margin-right: 3.3%;
}

.swiper-con .selected {
  background: rgba(104, 181, 129, 0.3);
  color: #015c1e;
}

.swiper-pop {
  position: fixed;
  top: 0rpx;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  width: 100%;
  height: 100%;
}

