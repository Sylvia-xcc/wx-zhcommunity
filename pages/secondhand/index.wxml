<!--pages/secondhand/index.wxml-->
<view hidden="{{isLoading}}">
  <view class="padding bg-white">
    <view class="flex flex-wrap">
      <view class="nav-item" wx:for="{{categoryList}}" wx:key="index" data-id="{{item.id}}" data-name="{{item.name}}" bindtap="classityTap">
        <image src="{{item.thumb}}"></image>
        <text>{{item.name}}</text>
      </view>
    </view>

    <!-- <view class="flex justify-between padding-tb-sm">
    <image src="/images/ershou1.png" style="width:329rpx;height:216rpx"></image>
    <image src="/images/ershou2.png" style="width:329rpx;height:216rpx"></image>
  </view> -->
  </view>


  <swiper class="screen-swiper padding-lr" style="min-height:216rpx;" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" display-multiple-items='2'>
    <swiper-item wx:for="{{slide}}" wx:key="index">
      <image src="{{item.pic}}" class="radius" mode="aspectFill" style="width:329rpx;height:216rpx" data-id="{{item.goods_id}}" bindtap="detailTap"></image>
    </swiper-item>
  </swiper>

  <view class="padding-bottom">
    <view class="cu-card dynamic no-card}}" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" bindtap="detailTap">
      <view class="cu-item shadow">
        <view class="cu-list menu-avatar">
          <view class="cu-item">
            <view class="cu-avatar round lg" style="background-image:url({{item.avatar}});"></view>
            <view class="content flex-sub">
              <view class="text-sm text-black text-bold" style="font-size:24rpx;">{{item.nickname}}</view>
              <view class="text-gray text-xs flex justify-between">
                {{item.create_time}}
              </view>
            </view>
          </view>
        </view>
        <view class="text-content text-bold showtwo" style="font-size:24rpx;">
          {{item.text}}
        </view>
        <view class="grid flex-sub padding-lr {{item.imgs.length>1?'col-3 grid-square':'col-1'}}" wx:if="{{item.types==1}}">
          <view class="bg-img {{item.imgs.length>1?'':'only-img'}}" wx:for="{{item.imgs}}" wx:key="index" wx:for-item="iitem" wx:if="{{index<3}}" style="background-image:url({{iitem}});" data-id="{{index}}" data-dataimg="{{item.imgs}}" catchtap='previewImgTap'>
          </view>
        </view>
        <view class="padding" wx:else>
          <video src="{{item.videos[0]}}" object-fit="cover" style="width:690rpx; height:242rpx;"></video>
        </view>
        <view class="text-content"></view>
      </view>
    </view>
  </view>
  <v-bottomloading showBottomLoading="{{showBottomLoading}}" haveMore="{{list.length>=total}}"></v-bottomloading>

  <view class="flex justify-center position-bottom" style="bottom:10rpx;">
    <button class="cu-btn round bg-green" bindtap="fabuTap">发布+</button>
  </view>
</view>