/* pages/index/index.wxss */
page{
  background: #fff !important;
}

.gz-item {
  width: 219rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 2rpx 3rpx 10rpx 0rpx rgba(153, 153, 153, 0.2);
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 20rpx;
  text-align: center;
  padding-top: 20rpx;
  margin: 10rpx;
}

.paper{
  animation: myfirst 4s linear 2s infinite alternate;
    /* Safari ä¸Ž Chrome: */
    -webkit-animation: myfirst 4s linear 2s infinite alternate;
}

@keyframes myfirst
{
	0%   {right:-100rpx; top:-20rpx;}
	25%  { right:50rpx; top:-20rpx;}
  75%  { right:50rpx; top:-20rpx;}
	100% { right:-100rpx; top:-20rpx;}
}

/* Safari and Chrome */
@-webkit-keyframes myfirst 
{
	0%   {right:-100rpx; top:-20rpx;}
	25%  { right:50rpx; top:-20rpx;}
  75%  { right:50rpx; top:-20rpx;}
	100% { right:-100rpx; top:-20rpx;}
}