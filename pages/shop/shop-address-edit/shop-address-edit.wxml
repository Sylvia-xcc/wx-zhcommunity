<!--pages/shop/shop-address-edit/shop-address-edit.wxml-->
<form bindsubmit="formSubmit">
  <view class="cu-form-group">
    <input type='text' placeholder="收货人姓名" name="name" value="{{address.username}}"></input>
  </view>
  <view class="cu-form-group">
    <input type='number' maxlength="11" placeholder="联系方式" name="mobile" value="{{address.phone}}"></input>
  </view>
  <view class="cu-form-group">
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker" style="text-align: left;">
        {{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group flex-direction align-start">
    <textarea maxlength="-1" disabled="{{modalName!=null}}" placeholder="详细地址" name='address' value="{{address.addr}}"></textarea>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">设为默认地址</view>
    <switch class="round orange" checked="{{address.default==1}}" bindtap="defaultTap"></switch>
  </view>
  <view class="cu-form-group margin-top" wx:if="{{addrId>0}}" bindtap="delAddress">
    <view class="title text-red">删除收货地址</view>
  </view>

  <button class="bg-red position-bottom" formType="submit">保存</button>
</form>