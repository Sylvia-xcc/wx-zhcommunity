/* pages/game/llk/llk.wxss */
page{
  background: #fff !important;
}
.border {
  display: inline-block;
  width: 88rpx;
  height: 88rpx;
  margin: 2rpx;
}

.border.showPath {
  border: 6rpx solid palevioletred;
  border-radius: 8rpx;
}

.cell {
  width: 88rpx;
  height: 88rpx;
  margin: 2rpx;
  position: relative;
}

.cell image{
  width: 88rpx;
  height: 88rpx;
}

.cell-line{
  position: absolute;
  top: 0;
  left: 0;
  height: 88rpx;
  width: 88rpx;
  border-radius: 8rpx;
  z-index: 99;
}

.cell .selected {
  border: 6rpx solid red;
}

.cell .showPath {
  border: 6rpx solid palevioletred;
}

.timer{
  width:150rpx;
  height: 60rpx;
  border-radius: 20rpx;
  background: gainsboro;
  border:5rpx solid salmon;
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 60rpx;
  vertical-align: middle;
  position: absolute;
  top: 20rpx;
  right: 50rpx;
}

.game{
  width: 750rpx;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.game-over{
  font-size: 60rpx;
  color: #fff;
  font-weight: bolder; 
}

