<!--pages/video/index.wxml-->

<view>
  <scroll-view scroll-x class="bg-white nav">
    <view class="flex padding-lr text-center">
      <view class="cu-item flex-sub {{tabCur==index?'text-cgreen text-bold nav-cur':''}}" bindtap="tabSelect" wx:for="{{classify}}" wx:key="index" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</view>
    </view>
  </scroll-view>

  <view class="padding-tb">
    <view wx:for="{{10}}" wx:key="index" data-id="{{item.id}}" bindtap="detailTap">
      <view class="bg-img bg-mask padding-tb-xl" style="background-image: url('/images/ershou2.png');height: 340rpx;">
        <view class="padding-lr text-white">
          <view class="padding-xs">
            钢铁之翼钢铁之翼钢铁之翼钢铁之翼钢铁之翼钢铁之翼钢铁之翼钢铁之翼钢铁之翼
          </view>
        </view>
      </view>
      <view class="flex align-center padding-lr padding-tb-sm">
        <image src="/images/head.png" class="cu-avatar round"></image>
        <text class="padding-left text-sm c0">中环国际社区</text>
        <text class="flex-sub text-right text-xs text-gray">1266次播放</text>
      </view>
    </view>
  </view>
  <v-bottomloading showBottomLoading="{{showBottomLoading}}" haveMore="{{list.length>=total}}"></v-bottomloading>
</view>