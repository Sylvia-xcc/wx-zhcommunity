<view hidden="{{isLoading}}">
  <view class="flex padding solid-bottom" wx:for="{{list}}" wx:key="index" data-id="{{item.detail.id}}" catchtap="detailTap">
    <image src="{{item.detail.img_list[0]}}" style="width:156rpx;height:156rpx;" mode="aspectFill" wx:if="{{item.detail.img_list.length>0}}"></image>
    <view class="flex-sub padding-left">
      <view class="c0 showtwo">{{item.detail.content}}</view>
      <view class="flex justify-between align-center text-gray font_22 padding-top-xl ">
        <text>{{item.detail.create_time}}</text>
        <view class="flex">
          <!-- <view class="text-sm text-gray text-right padding-left" data-id="{{item.id}}" catchtap="deleteTap">åˆ é™¤</view> -->
        </view>
      </view>
    </view>
  </view>
  <!-- <block wx:for="{{list}}" wx:key="index">
    <v-commonweal item="{{item.detail}}"></v-commonweal>
  </block> -->
  <v-bottomloading showBottomLoading="{{showBottomLoading}}" haveMore="{{list.length>=total}}"></v-bottomloading>
</view>