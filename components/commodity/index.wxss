/* components/commodity/index.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";

.pop-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 0;
}

.pop-mask.active {
  display: block;
}

.pop-content {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  background: #fff;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 9999;
}

.pop-content.active {
  transform: translateY(0);
}

.cart-popup-container {
  width: 100%;
  background: #fff;
  opacity: 0.8;
}

.cart-popup-con {
  margin-left: 23rpx;
}

.cart-popup-top {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-right: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx rgba(245, 245, 245, 1) solid;
}

.cart-popup-top-img {
  width: 180rpx;
  height: 180rpx;
}

.cart-popup-top-right {
  margin-left: 28rpx;
  display: flex;
  flex-direction: column;
  width: 491rpx;
}

.cart-popup-top-pricenew {
  font-size: 32rpx;
  color: #EF696B;
  margin-top: 40rpx;
  font-weight: bold;
}

.cart-popup-top-priceold {
  font-size: 26rpx;
  text-decoration: line-through;
  color: #999;
  margin-left: 20rpx;
  font-weight: 400;
}

.stock {
  font-size: 24rpx;
  color: #999;
}

.cart-popup-date {
  margin-top: 24rpx;
  margin-right: 24rpx;
  border-bottom: 2rpx rgba(245, 245, 245, 1) solid;
}

.cart-popup-date-con {
  margin-top: 18rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.cart-popup-item {
  min-width: 146rpx;
  height: 58rpx;
  /* background: rgba(245, 245, 245, 1); */
  margin-bottom: 24rpx;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(57, 57, 57, 1);
  border-radius: 10rpx;
  border: 2rpx solid rgba(151, 151, 151, 1);
}

.cart-popup-item-active {
  background: #EF696B;
  border-radius: 10rpx;
  color: rgba(255, 255, 255, 1);
}

.shu {
  width: 100%;
  margin-top: 100rpx;
  display: flex;
  justify-content: space-between;
}

.cun {
  margin-bottom: 100rpx;
  font-size: 30rpx;
  /* padding-left: 20rpx; */
  width: 20%;
  display: inline-block;
}

.stepper {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 12rpx;
}

.disabled {
  background-color: #f5f5f9;
  color: #ccc;
}

.stepper .nownum {
  width: 140rpx;
  height: 50rpx;
}

.stepper view {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 6rpx;
  border: 1px solid #ccc;
  color: #000;
  margin-right: 20rpx;
  line-height: 50rpx;
  vertical-align: middle;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-popup-close {
  width: 24rpx;
  height: 23rpx;
  position: absolute;
  right: 24rpx;
  top: 30rpx;
}

.fts24 {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.ftb24 {
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.cart-popup-btnsure {
  width: 750rpx;
  height: 90rpx;
  background: #68B581;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
